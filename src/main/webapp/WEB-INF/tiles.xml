<tiles-definitions>

	<!-- Tiles Template Page -->
	<definition name="base" template="/layouts/baseLayout.jsp">
      <put-attribute name="page_heading"  value="page heading"/>
      <put-attribute name="header" value="/tiles/header.jsp"/>
      <put-attribute name="menu" value="/tiles/menu.jsp"/>
      <put-attribute name="right" value="/tiles/right.jsp"/>
      <put-attribute name="body" value="/tiles/body.jsp"/>
      <put-attribute name="body_onload" value=""/>
      <put-attribute name="footer" value="/tiles/footer.jsp"/>
  </definition>
  
  <!-- Home Page -->
  <definition name="home" extends="base">
      <put-attribute name="page_heading" value="Criminal Record Check"/>
      <put-attribute name="right" value="/tiles/blank.jsp"/>
      <put-attribute name="body" value="/WEB-INF/jsp/homePageContent.jsp"/>      
  </definition>
  
